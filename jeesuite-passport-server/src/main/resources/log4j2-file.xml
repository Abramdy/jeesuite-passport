<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    
	<appenders>		
		<RollingFile name="LogFileAppender" fileName="${sys:log.output.dir}${sys:appId}.log" filePattern="${sys:log.output.dir}${sys:appId}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>
            <SizeBasedTriggeringPolicy size="10M"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
              </Filters>
        </RollingFile>
        
         <RollingFile name="ErrorLogFileAppender" fileName="${sys:log.output.dir}${sys:appId}-error.log" filePattern="${sys:log.output.dir}${sys:appId}-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>
            <SizeBasedTriggeringPolicy size="10M"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
              </Filters>
        </RollingFile> 

	</appenders>

	<loggers>
		<logger name="com.jeesuite" level="${sys:log.framework.level}"></logger>
	    <logger name="com.jeesuiteframwork" level="${sys:log.framework.level}"></logger>
		<logger name="com.jeesuite" level="${sys:log.service.level}"></logger>
		<root level="INFO">
			<appender-ref ref="LogFileAppender" />
			<appender-ref ref="ErrorLogFileAppender" />
		</root>
	</loggers>

</configuration>